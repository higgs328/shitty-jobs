<JobFilter::Dropdown::DropdownContent
  @inputValue={{@value}}
  @inputDisabled={{false}}
  @inputPlaceholder="Search for {{@label}}"
  @dropdownSelection={{this.selectedOptions}}
  @buttonApplyClicked={{@apply}}
  @buttonClearClicked={{@clear}}
  @buttonClearDisabled={{not (has-key @params @param)}}
>
  {{#each this.optionsSorted as |option|}}
    <JobFilter::Dropdown::DropdownOption
      @option={{option.value}}
      @options={{this.selectedOptions}}
      @count={{option.count}}
      @onChange={{this.onChange}}
    />
  {{/each}}
</JobFilter::Dropdown::DropdownContent>