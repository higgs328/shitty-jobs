<div id="dropdown-section" class="text-center">

  {{! Navbar }}
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid justify-content-center">

      {{! Toggler }}
      <button
        class="navbar-toggler mb-3"
        type="button"
        {{on "click" this.toggleDisplay}}
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      {{! Collapse }}
      <div
        class="collapse navbar-collapse justify-content-center
          {{if this.forceDisplay 'd-block'}}"
        id="dropdown-filters"
      >
        <div id="dropdown-items" class="px-5 mb-3">

          <div class="row justify-content-center">

            {{! agency }}
            <JobFilter::Dropdown
              @type="list"
              @loading={{@loading}}
              @results={{@results}}
              @params={{@params}}
              @param="agency"
              @label="Agency"
              @key="agency"
            />

            {{! civilServiceTitle }}
            <JobFilter::Dropdown
              @type="list"
              @loading={{@loading}}
              @results={{@results}}
              @params={{@params}}
              @param="title"
              @label="Title"
              @key="civilServiceTitle"
            />

            {{! titleClassification }}
            <JobFilter::Dropdown
              @type="list"
              @loading={{@loading}}
              @results={{@results}}
              @params={{@params}}
              @param="tclass"
              @label="Class"
              @key="titleClassification"
            />

            {{! salaryRangeTo }}
            <JobFilter::Dropdown
              @type="range"
              @loading={{@loading}}
              @results={{@results}}
              @params={{@params}}
              @param="salary"
              @label="Salary"
            />

          </div>

        </div>
      </div>
    </div>
  </nav>

</div>